{% extends 'base.html.twig' %}

{% form_theme form  'bootstrap_4_layout.html.twig' %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label': 'Nom de famille' , 'attr' : { 'placeholder': 'Mettez votre nom de famille'}}) }}
    {{ form_row(form.lastname, {'label': 'Votre prénom' , 'attr' : { 'placeholder': 'Mettez votre prénom'}}) }}
    {{ form_row(form.mail,{'label': 'Email' , 'attr' : { 'placeholder': 'Saisir votre email'}}) }}
    {{ form_row(form.password,{'label': 'Mot de passe' , 'attr' : { 'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password,{'label': 'Confirmation de votre mot de passe' , 'attr' : { 'placeholder': 'Répétez votre mot de passe'}}) }}

    <button type="submit" class="btn btn-info">Inscription</button>



    {{ form_end(form) }}

{% endblock %}




